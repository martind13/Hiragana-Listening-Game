<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.devma.listeninggame.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="106dp"
                android:id="@+id/practice1"
                android:layout_height="98dp"
                android:background="@drawable/listen" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:text="Button"
                android:layout_width="108dp"
                android:layout_height="98dp"
                android:id="@+id/btn1"
                android:background="@drawable/a_orange"
                android:onClick="btn1_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn2"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn2_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn3"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn3_click" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:id="@+id/btn4"
                android:layout_weight="0.99"
                android:onClick="btn4_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn5"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn5_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn6"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn6_click" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:id="@+id/btn7"
                android:layout_weight="0.99"
                android:onClick="btn7_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn8"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn8_click" />

            <ImageButton
                android:text="Button"
                android:layout_width="wrap_content"
                android:id="@+id/btn9"
                android:layout_weight="1.00"
                android:layout_height="98dp"
                android:onClick="btn9_click" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
